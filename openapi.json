{
  "openapi": "3.1.0",
  "info": {
    "title": "Calendar Scheduler API",
    "version": "1.1.0",
    "description": "Schedules Google Calendar events via HTTP POST."
  },
  "servers": [
    { "url": "https://script.google.com" }
  ],
  "paths": {
    "/macros/s/AKfycbwwsn9ehKaJ5fg_I-MqB17SJSyD8IoHIWmqtXiKqjDookSL1GidoKHQrMsVYvL6AbKQpA/exec": {
      "post": {
        "operationId": "scheduleEvent",
        "summary": "Schedule an event",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title":       { "type": "string" },
                  "date":        { "type": "string", "format": "date" },
                  "time":        { "type": "string" },
                  "duration":    { "type": "integer" },
                  "description": { "type": "string" }
                },
                "required": ["title", "date", "time", "duration"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Event scheduled" },
          "400": { "description": "Bad request" }
        }
      }
    }
  }
}
