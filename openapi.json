{
  "openapi": "3.1.0",
  "info": {
    "title": "Calendar Scheduler API",
    "version": "1.0.0",
    "description": "Schedules Google Calendar events via HTTP POST"
  },
  "servers": [
    { "url": "https://script.google.com" }
  ],
  "paths": {
    "/macros/s/AKfycbwG_sRYMmctcZ7bVOqjLz4dtVeHToY6hUoyWcF0fXxjaH7CnmRjFHbtdoQtrOt4e3ppBg/exec": {
      "post": {
        "operationId": "scheduleEvent",
        "summary": "Schedule an event",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title":    { "type": "string" },
                  "date":     { "type": "string", "format": "date" },
                  "time":     { "type": "string" },
                  "duration": { "type": "integer" }
                },
                "required": ["title", "date", "time", "duration"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Event scheduled"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  }
}
